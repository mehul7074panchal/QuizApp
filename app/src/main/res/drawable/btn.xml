<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape >
            <!--BackGround Color-->
            <solid
                android:color="#BF000000" />


<!--             Border click Color  -->
            <stroke
                android:width="2dp"
                android:color="#33000000" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:shape="rectangle"
                android:startColor="#66000000"
                android:endColor="#66000000"
                android:angle="270" />

            <!--Border color  -->
            <stroke
                android:shape="rectangle"
                android:width="1dp"
                android:color="#33000000" />
             <!-- Here is the corner radius -->
            <corners
                android:radius="2dip" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />



        </shape>
    </item>
</selector>